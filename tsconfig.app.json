{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": [
    // "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "preserveValueImports": false,
    "isolatedModules": false,
    "composite": true,
    "types": [
      "element-plus/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}